<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/flash_header"
        android:id="@+id/header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="40dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@drawable/brownc"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Purple"
                android:textSize="25dp"
                android:gravity="center"
                android:id="@+id/tvPurple"
                android:layout_marginBottom="50dp"
                android:textStyle="bold"
                android:textColor="@color/brown"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="35dp"
                android:id="@+id/ivPurple"
                android:layout_above="@+id/tvPink"
                android:layout_marginBottom="50dp"
                android:src="@drawable/wrong"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pink"
                android:textSize="25dp"
                android:gravity="center"
                android:id="@+id/tvPink"
                android:layout_marginBottom="50dp"
                android:layout_below="@+id/tvPurple"
                android:textStyle="bold"
                android:textColor="@color/brown"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="35dp"
                android:id="@+id/ivPink"
                android:layout_below="@+id/tvPurple"
                android:layout_above="@+id/tvBrown"
                android:layout_marginBottom="50dp"
                android:src="@drawable/wrong"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brown"
                android:textSize="25dp"
                android:id="@+id/tvBrown"
                android:gravity="center"
                android:layout_marginBottom="50dp"
                android:layout_below="@+id/tvPink"
                android:textStyle="bold"
                android:textColor="@color/brown"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="35dp"
                android:id="@+id/ivBrown"
                android:layout_marginBottom="40dp"
                android:layout_below="@+id/tvPink"
                android:layout_above="@+id/tvBlack"
                android:src="@drawable/right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Black"
                android:textSize="25dp"
                android:gravity="center"
                android:layout_below="@+id/tvBrown"
                android:id="@+id/tvBlack"
                android:textStyle="bold"
                android:textColor="@color/brown"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="35dp"
                android:id="@+id/ivBlack"
                android:layout_marginLeft="30dp"
                android:layout_below="@+id/tvBrown"
                android:layout_marginBottom="50dp"
                android:src="@drawable/wrong"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
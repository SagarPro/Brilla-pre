<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/f_black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sms_permission"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:id="@+id/dialog_title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This app need sms permission to send login credentials to new users. You can allow permissions manually by clicking on settings below."
        android:textSize="16sp"
        android:textColor="#fff"
        android:layout_below="@+id/dialog_title"
        android:padding="10dp"
        android:id="@+id/dialog_message"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="16sp"
        android:textColor="@color/fbutton_color_alizarin"
        android:layout_below="@+id/dialog_message"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/pSettings"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="16sp"
        android:textColor="@color/fbutton_color_alizarin"
        android:layout_below="@+id/dialog_message"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/pCancel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:textSize="16sp"
        android:textColor="@color/fbutton_color_alizarin"
        android:layout_below="@+id/dialog_message"
        android:layout_alignParentRight="true"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/pOk"/>

</RelativeLayout>